<Window x:Class="DebianPackagesExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DebianPackagesExplorer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:windows="clr-namespace:DebianPackagesExplorer.Windows"
        Width="800"
        Height="450"
        Icon="/Resources/DebianLogo.png"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
	<Window.CommandBindings>
		<CommandBinding Command="local:MainWindow.CommandFileExit" Executed="CommandFileExit_Executed" />
		<CommandBinding Command="local:MainWindow.CommandFileOpenFile" Executed="CommandFileOpenFile_Executed" />
		<CommandBinding Command="local:MainWindow.CommandFileOpenLink" Executed="CommandFileOpenLink_Executed" />
		<CommandBinding Command="local:MainWindow.CommandHelpAbout" Executed="CommandHelpAbout_Executed" />
	</Window.CommandBindings>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--  Background image  -->
		<Image Grid.RowSpan="4" Panel.ZIndex="0" Opacity="0.1" Source="/Resources/DebianLogo.png" />

		<!--  Main menu  -->
		<Menu Grid.Row="0" Background="Transparent">
			<MenuItem Header="{DynamicResource MainWindow_MenuItem_Header_File}">
				<MenuItem Command="local:MainWindow.CommandFileOpenFile" Header="{DynamicResource MainWindow_MenuItem_Header_File_OpenFile}" />
				<MenuItem Command="local:MainWindow.CommandFileOpenLink" Header="{DynamicResource MainWindow_MenuItem_Header_File_OpenLink}" />
				<Separator />
				<MenuItem Command="local:MainWindow.CommandFileExit" Header="{DynamicResource MainWindow_MenuItem_Header_File_Exit}" />
			</MenuItem>
			<MenuItem Header="{DynamicResource MainWindow_MenuItem_Header_Help}">
				<MenuItem Command="local:MainWindow.CommandHelpAbout" Header="{DynamicResource MainWindow_MenuItem_Header_Help_About}" />
			</MenuItem>
		</Menu>

		<!--  Content  -->
		<Grid Grid.Row="1">
			<DataGrid Name="DataGridPackages" Grid.Row="1" AutoGenerateColumns="False"
			          Background="Transparent" HeadersVisibility="Column"
			          ItemsSource="{Binding Packages}"
			          RowBackground="Transparent" SelectionMode="Single" SelectionUnit="FullRow">
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding Name, Mode=OneWay}" Header="Name" />
					<DataGridTextColumn Binding="{Binding Architecture, Mode=OneWay}" Header="Architecture" />
					<DataGridTextColumn Binding="{Binding Version, Mode=OneWay}" Header="Version" />
					<DataGridTextColumn Binding="{Binding Priority, Mode=OneWay}" Header="Priority" />
					<DataGridTextColumn Binding="{Binding Section, Mode=OneWay}" Header="Section" />
					<DataGridTextColumn Binding="{Binding Size, Mode=OneWay}" Header="Size (Bytes)" />
					<DataGridTextColumn Binding="{Binding InstalledSize, Mode=OneWay}" Header="Installed Size (Bytes)" />
					<DataGridTextColumn Width="*" Binding="{Binding Description, Mode=OneWay}" Header="Description" />
				</DataGrid.Columns>
			</DataGrid>
		</Grid>

		<!--  Package info  -->
		<GroupBox Grid.Row="2" MinHeight="200" Margin="5,0,5,0" Header="Package Info">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<!--  Package info  -->
				<Grid Grid.Column="0" Background="Transparent" DataContext="{Binding ElementName=DataGridPackages, Path=SelectedItem}">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<!--  Package other info  -->
					<Grid Grid.Row="0" Margin="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" MinWidth="100" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>

						<!--  Author  -->
						<TextBlock Grid.Row="0" Grid.Column="0" Text="Author" />
						<TextBox Grid.Row="0" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding Author, Mode=OneWay}" />

						<!--  Homepage  -->
						<TextBlock Grid.Row="1" Grid.Column="0" Text="Homepage" />
						<TextBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding Homepage, Mode=OneWay}" />

						<!--  Depends  -->
						<TextBlock Grid.Row="2" Grid.Column="0" Text="Depends" />
						<TextBox Grid.Row="2" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding Depends, Mode=OneWay}" />

						<!--  Suggets  -->
						<TextBlock Grid.Row="3" Grid.Column="0" Text="MD5" />
						<TextBox Grid.Row="3" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding MD5Sum, Mode=OneWay}" />

						<!--  SHA1  -->
						<TextBlock Grid.Row="4" Grid.Column="0" Text="SHA1" />
						<TextBox Grid.Row="4" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding SHA1, Mode=OneWay}" />

						<!--  SHA256  -->
						<TextBlock Grid.Row="5" Grid.Column="0" Text="SHA256" />
						<TextBox Grid.Row="5" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding SHA256, Mode=OneWay}" />

						<!--  Tags  -->
						<TextBlock Grid.Row="6" Grid.Column="0" Text="" />
						<TextBox Grid.Row="6" Grid.Column="1" Style="{DynamicResource StyleTextBoxInfo}" Text="{Binding Tags, Mode=OneWay}" />

						<!--    -->
						<!--
						<TextBlock Grid.Row="7" Grid.Column="0" Text="" />
						<TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Tags, Mode=OneWay}" Style="{DynamicResource StyleTextBoxInfo}" />

						-->
						<!--    -->
						<!--
						<TextBlock Grid.Row="8" Grid.Column="0" Text="" />
						<TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Tags, Mode=OneWay}" Style="{DynamicResource StyleTextBoxInfo}"/>-->
					</Grid>

					<!--  Package description  -->
					<GroupBox Grid.Row="1" Margin="5" Padding="5" Header="Description">
						<TextBox Name="TextBoxPackageDescription" Background="Transparent" BorderThickness="0"
						         IsReadOnly="True"
						         Text="{Binding Description, Mode=OneWay}" />
					</GroupBox>
				</Grid>

				<!--  Tolbar  -->
				<Border Grid.Column="1" Margin="2,0,2,2" Background="AliceBlue" BorderBrush="LightGray"
				        BorderThickness="1" CornerRadius="2">
					<StackPanel Margin="5">
						<Button Style="{DynamicResource ToolButton}" />
						<Button Margin="0,2,0,0" Style="{DynamicResource ToolButton}" />
						<Button Margin="0,2,0,0" Style="{DynamicResource ToolButton}" />
						<Button Margin="0,2,0,0" Style="{DynamicResource ToolButton}" />
					</StackPanel>
				</Border>
			</Grid>
		</GroupBox>

		<!--  Statusbar  -->
		<StatusBar Grid.Row="3">
			<StatusBarItem Width="300" HorizontalAlignment="Right">
				<ProgressBar Name="ProgressBarStatus" Width="290" Height="14" HorizontalAlignment="Stretch"
				             VerticalAlignment="Stretch" Maximum="100" Minimum="0" Value="50" />
			</StatusBarItem>
			<StatusBarItem>
				<TextBlock Name="TextBlockStatus" Text="Ready" />
			</StatusBarItem>
		</StatusBar>

		<!--  Rest  -->
		<Border Name="BorderOpenFileLink" Grid.RowSpan="4" Width="320" Height="30"
		        HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black"
		        Visibility="Collapsed">
			<Grid Margin="5">
				<TextBox Name="TextBoxOpenFileLink" VerticalContentAlignment="Center" KeyDown="TextBoxOpenFileLink_KeyDown" />
			</Grid>
		</Border>
	</Grid>
</Window>
